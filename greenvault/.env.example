# GreenVault Environment Variables
# Google OAuth Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Sui Network Configuration
NEXT_PUBLIC_SUI_NETWORK=devnet
NEXT_PUBLIC_SUI_FULLNODE_URL=https://fullnode.devnet.sui.io
NEXT_PUBLIC_SUI_PROVER_URL=https://prover-dev.mystenlabs.com/v1
NEXT_PUBLIC_SUI_FAUCET_URL=https://faucet.devnet.sui.io/gas

# Application Configuration
NEXT_PUBLIC_APP_URL_LOGIN=http://localhost:3000/login
NEXTAUTH_URL_LOGIN=http://localhost:3000/login
NEXT_PUBLIC_APP_URL_SIGNUP=http://localhost:3000/signup
NEXTAUTH_URL_SIGNUP=http://localhost:3000/signup
NEXTAUTH_SECRET=your-nextauth-secret-key

# JWT Configuration (Required for login/signup)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# DID Configuration
ENCRYPTION_SECRET=your-encryption-secret-for-did-private-keys
NEXT_PUBLIC_SUI_NETWORK=devnet 

# Oasis Network Configuration
OASIS_RPC_URL=https://testnet.sapphire.oasis.io
OASIS_PRIVATE_KEY=your_private_key_here
OASIS_CONTRACT_ADDRESS=your_deployed_contract_address

# API Keys for External Data Sources
SATELLITE_API_KEY=your_satellite_api_key
IOT_API_KEY=your_iot_api_key
WEATHER_API_KEY=your_weather_api_key

# Network Configuration
CHAIN_ID=23295  # Oasis Sapphire Testnet
GAS_LIMIT=1000000
GAS_PRICE=1000000000

# External Registry APIs
VERRA_API_KEY=your_verra_api_key
GOLD_STANDARD_API_KEY=your_gold_standard_api_key

# Oracle Configuration
ORACLE_UPDATE_INTERVAL=3600  # 1 hour in seconds
MIN_CONFIDENCE_THRESHOLD=85
MAX_DATA_AGE=86400  # 24 hours in seconds

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

